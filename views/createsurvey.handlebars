<div class="formContainer">
    <form class="form-horizontal createSurveyForm" role="form" 
            action="/survey/create?form=createSurvey&&surveyname={{name}}&&version={{version}}" method="POST">
        <input type="hidden" name="_csrf" value="{{_csrfToken}}">
        <div class="form-group">
            <label for="fieldName" class="col-sm-2 control-label">Survey Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" 
                id="fieldSurveyName" name="surveyName">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldName" class="col-sm-2 control-label">Client Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" 
                id="fieldClientName" name="clientName">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldEmail" class="col-sm-2 control-label">Start Date</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" required 
                    id="fieldStartDate" name="startDate">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldEmail" class="col-sm-2 control-label">End Date</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" required 
                    id="fieldEndDate" name="endDate">
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" name="submit">
        </div>
    </form>
</div>