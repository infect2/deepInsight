<h3>Create Survey</h3>
<div class="createSurvey">
    <div class="formContainer">
        <form class="form-horizontal createSurveyForm" role="form" 
                action="/survey/create?form=createSurvey&&surveyname={{name}}&&version={{version}}" method="POST">
            <input type="hidden" name="_csrf" value="{{_csrfToken}}">
            <div class="form-group row">
                <label for="fieldName" class="col-sm-4 control-label">Survey Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" 
                    id="fieldSurveyName" name="surveyName">
                </div>
            </div>
            <div class="form-group row">
                <label for="fieldName" class="col-sm-4 control-label">Client Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" 
                    id="fieldClientName" name="clientName">
                </div>
            </div>
            <div class="form-group row">
                <label for="fieldEmail" class="col-sm-4 control-label">Start Date</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control" required 
                        id="fieldStartDate" name="startDate">
                </div>
            </div>
            <div class="form-group row">
                <label for="fieldEmail" class="col-sm-4 control-label">End Date</label>
                <div class="col-sm-4">
                    <input type="date" class="form-control" required 
                        id="fieldEndDate" name="endDate">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4"></div>
                <div class="form-group col-sm-4">
                    <input type="submit" value="Create" name="submit">
                </div>
            </div>
        </form>
    </div>
</div>